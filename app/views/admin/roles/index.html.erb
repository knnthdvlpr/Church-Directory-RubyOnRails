<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Role Assignment</h1>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Roles</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= user.full_name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= user.email %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% user.roles.each do |role| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mr-2">
                  <%= role.name.titleize %>
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <button onclick="openRoleModal(<%= user.id %>, '<%= user.full_name %>', <%= user.role_ids.to_json %>)" class="text-indigo-600 hover:text-indigo-900">
                Manage Roles
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Role Assignment Modal -->
<div id="roleModal" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="closeRoleModal()"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <%= form_with url: '', method: :patch, id: "roleForm", class: "bg-white" do |f| %>
        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4" id="modal-title">
            Assign Roles to <span id="modalUserName"></span>
          </h3>
          
          <div class="space-y-3">
            <% @available_roles.each do |role| %>
              <div class="flex items-center">
                <%= check_box_tag "role_ids[]", role.id, false, id: "role_#{role.id}", class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <%= label_tag "role_#{role.id}", role.name.titleize, class: "ml-2 block text-sm text-gray-900" %>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <%= f.submit "Update Roles", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm" %>
          <button type="button" onclick="closeRoleModal()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function openRoleModal(userId, userName, currentRoleIds) {
    document.getElementById('modalUserName').textContent = userName;
    document.getElementById('roleForm').action = `/admin/roles/${userId}`;
    
    // Uncheck all checkboxes first
    document.querySelectorAll('input[name="role_ids[]"]').forEach(checkbox => {
      checkbox.checked = false;
    });
    
    // Check the current roles
    currentRoleIds.forEach(roleId => {
      const checkbox = document.getElementById(`role_${roleId}`);
      if (checkbox) checkbox.checked = true;
    });
    
    document.getElementById('roleModal').classList.remove('hidden');
  }
  
  function closeRoleModal() {
    document.getElementById('roleModal').classList.add('hidden');
  }
</script>