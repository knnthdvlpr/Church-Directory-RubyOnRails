<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
<h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Member: <%= @member.full_name %></h1>
<%= form_with(model: @member, url: admin_member_path(@member), method: :patch, class: "space-y-6", data: { controller: "member-form" }) do |f| %>
<% if @member.errors.any? %>
<div class="bg-red-50 border border-red-200 rounded-md p-4">
<h2 class="text-red-800 font-medium mb-2"><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>
<ul class="list-disc list-inside text-red-700">
<% @member.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>
<div class="bg-white shadow sm:rounded-lg p-6 space-y-6">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :middle_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :middle_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :age, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :age, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :baptismal_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :baptismal_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :branch_id, "Branch", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :branch_id, @branches, :id, :name, 
          { include_blank: "Select Branch" }, 
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
            data: { action: "change->member-form#updateDepartments" } } %>
    </div>

    <div>
      <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :department_id, @departments, :id, :name, 
          { include_blank: "Select Department" }, 
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
            data: { action: "change->member-form#updatePositions", "member-form-target": "departmentSelect" } } %>
    </div>

    <div>
      <%= f.label :position_id, "Position", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :position_id, @positions, :id, :name, 
          { include_blank: "Select Position" }, 
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
            data: { "member-form-target": "positionSelect" } } %>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, [['Active', 'Active'], ['Suspended', 'Suspended']], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to 'Cancel', admin_members_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit "Update Member", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
</div>
<% end %>
</div>