<!-- app/views/admin/members/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Member Management</h1>
  </div>

  <!-- Search and Filter Section -->
  <div class="bg-white shadow sm:rounded-lg p-6 mb-6">
    <%= form_with url: admin_members_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <%= f.label :search, "Search (Name or Email)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, value: params[:search], placeholder: "Search members...", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Branch Filter -->
        <div>
          <%= f.label :branch_id, "Branch", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :branch_id, @branches, :id, :name, { include_blank: "All Branches", selected: params[:branch_id] }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Department Filter -->
        <div>
          <%= f.label :department_id, "Department", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :department_id, @departments, :id, :name, { include_blank: "All Departments", selected: params[:department_id] }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Status Filter -->
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status, [['All', ''], ['Active', 'Active'], ['Suspended', 'Suspended']], { selected: params[:status] }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Baptismal Status Filter -->
        <div>
          <%= f.label :baptismal_status, "Baptismal Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :baptismal_status, [['All', ''], ['Baptized', 'Baptized'], ['Unbaptized', 'Unbaptized']], { selected: params[:baptismal_status] }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Buttons -->
        <div class="flex items-end space-x-2 md:col-span-4">
          <%= f.submit "Apply Filters", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "Clear", admin_members_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Results Count -->
  <div class="mb-4">
    <p class="text-sm text-gray-600">
      Showing <span class="font-medium"><%= @members.count %></span> member(s)
    </p>
  </div>

  <!-- Members Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Branch</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Baptismal</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @members.any? %>
          <% @members.each do |member| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to member.full_name, admin_member_path(member), class: "text-blue-600 hover:text-blue-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.branch&.name || 'Unassigned' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.department&.name || 'Unassigned' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.position&.name || 'Unassigned' %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= member.baptismal_status == 'Baptized' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= member.baptismal_status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= member.status == 'Active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= member.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to 'Edit', edit_admin_member_path(member), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <% if member.status == 'Active' %>
                  <%= button_to 'Suspend', suspend_admin_member_path(member), method: :patch, class: "text-red-600 hover:text-red-900", form: { data: { turbo_confirm: "Are you sure?" } } %>
                <% else %>
                  <%= button_to 'Activate', activate_admin_member_path(member), method: :patch, class: "text-green-600 hover:text-green-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-4 text-center text-sm text-gray-500">
              No members found matching your criteria.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>