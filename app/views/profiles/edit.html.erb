<!-- app/views/profiles/edit.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-8") do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 shadow-lg">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="text-red-800 font-bold mb-2">
                <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
              </h3>
              <ul class="list-disc list-inside text-red-700 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-indigo-100">
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-8 py-6">
          <h2 class="text-3xl font-bold text-white flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Edit Your Profile
          </h2>
          <p class="text-indigo-100 mt-2">Update your personal information</p>
        </div>

        <!-- Form Fields -->
        <div class="p-8 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- First Name -->
            <div class="group">
              <%= f.label :first_name, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                First Name <span class="text-red-500 ml-1">*</span>
              <% end %>
              <%= f.text_field :first_name, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900" %>
            </div>

            <!-- Middle Name -->
            <div class="group">
              <%= f.label :middle_name, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Middle Name
              <% end %>
              <%= f.text_field :middle_name, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900" %>
            </div>

            <!-- Last Name -->
            <div class="group">
              <%= f.label :last_name, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Last Name <span class="text-red-500 ml-1">*</span>
              <% end %>
              <%= f.text_field :last_name, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900" %>
            </div>

            <!-- Age -->
            <div class="group">
              <%= f.label :age, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Age <span class="text-red-500 ml-1">*</span>
              <% end %>
              <%= f.number_field :age, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900" %>
            </div>

            <!-- Email -->
            <div class="group">
              <%= f.label :email, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Email <span class="text-red-500 ml-1">*</span>
              <% end %>
              <%= f.email_field :email, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900" %>
            </div>

            <!-- Phone Number -->
            <div class="group">
              <%= f.label :phone_number, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
                <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Phone Number
              <% end %>
              <%= f.text_field :phone_number, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition duration-200 text-gray-900", placeholder: "09XX XXX XXXX" %>
            </div>
          </div>

          <!-- Information Box -->
          <div class="bg-gradient-to-br from-yellow-50 to-amber-50 border-2 border-yellow-200 rounded-xl p-6">
            <div class="flex items-start">
              <svg class="w-6 h-6 text-yellow-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <h4 class="font-bold text-yellow-900 mb-1">Administrative Information</h4>
                <p class="text-sm text-yellow-800">
                  Your Branch, Department, Position, and Baptismal information can only be updated by a church administrator. Please contact your church office if these need to be changed.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50 px-8 py-6 flex justify-end space-x-4">
          <%= link_to "Cancel", profile_path, class: "px-6 py-3 border-2 border-gray-300 rounded-xl shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transform transition hover:scale-105" %>
          <%= f.submit "Update Profile", class: "px-6 py-3 border border-transparent rounded-xl shadow-lg text-base font-medium text-white bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 transform transition hover:scale-105 cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>