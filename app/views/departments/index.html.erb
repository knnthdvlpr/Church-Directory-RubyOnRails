<!-- app/views/departments/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-teal-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl mb-4">
        Church <span class="text-green-600">Departments</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Discover the various ministries and departments serving our church community
      </p>
    </div>

    <% if current_user&.has_role?(:admin) %>
      <div class="flex justify-center mb-8">
        <%= link_to new_department_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-white bg-gradient-to-r from-green-600 to-teal-600 hover:from-green-700 hover:to-teal-700 transform transition hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add New Department
        <% end %>
      </div>
    <% end %>

    <!-- Departments Grid -->
    <% if @departments.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @departments.each do |department| %>
          <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transform transition duration-300 hover:-translate-y-2 overflow-hidden border border-gray-100">
            <!-- Department Header -->
            <div class="relative h-40 bg-gradient-to-br from-green-400 via-teal-400 to-blue-500 p-6">
              <div class="absolute inset-0 bg-black opacity-10"></div>
              <div class="relative z-10">
                <div class="flex items-center justify-between mb-4">
                  <div class="bg-white rounded-full p-3 shadow-xl">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                  </div>
                </div>
                <h3 class="text-2xl font-bold text-white drop-shadow-lg">
                  <%= department.name %>
                </h3>
              </div>
            </div>

            <!-- Department Content -->
            <div class="p-6">
              <!-- Branch Badge -->
              <div class="mb-4">
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                  <span class="font-medium"><%= department.branch&.name || 'No branch' %></span>
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-600 text-sm mb-6 line-clamp-3 min-h-[60px]">
                <%= department.description || 'No description available' %>
              </p>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6 p-4 bg-gradient-to-br from-green-50 to-teal-50 rounded-lg">
                <div class="text-center">
                  <p class="text-2xl font-bold text-green-600"><%= department.positions.count %></p>
                  <p class="text-xs text-gray-600 font-medium">Positions</p>
                </div>
                <div class="text-center">
                  <p class="text-2xl font-bold text-teal-600"><%= department.users.count %></p>
                  <p class="text-xs text-gray-600 font-medium">Members</p>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex space-x-2">
                <%= link_to department, class: "flex-1 text-center px-4 py-2 bg-green-50 text-green-700 rounded-lg hover:bg-green-100 transition font-medium text-sm" do %>
                  View Details
                <% end %>
                
                <% if current_user&.has_role?(:admin) %>
                  <%= link_to edit_department_path(department), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  
                  <%= button_to department, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h3 class="mt-6 text-xl font-medium text-gray-900">No departments yet</h3>
        <p class="mt-2 text-gray-500">Get started by creating your first department.</p>
        <% if current_user&.has_role?(:admin) %>
          <div class="mt-6">
            <%= link_to "Create Department", new_department_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-white bg-gradient-to-r from-green-600 to-teal-600 hover:from-green-700 hover:to-teal-700" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>