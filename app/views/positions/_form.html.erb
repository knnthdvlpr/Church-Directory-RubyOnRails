<!-- app/views/positions/_form.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-pink-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <%= form_with(model: position, class: "space-y-8") do |form| %>
      <% if position.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 shadow-lg">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="text-red-800 font-bold mb-2">
                <%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:
              </h3>
              <ul class="list-disc list-inside text-red-700 space-y-1">
                <% position.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-purple-100">
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-8 py-6">
          <h2 class="text-3xl font-bold text-white flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <%= position.new_record? ? 'Create New Position' : 'Edit Position' %>
          </h2>
          <p class="text-purple-100 mt-2">Fill in the details for the leadership position</p>
        </div>

        <!-- Form Fields -->
        <div class="p-8 space-y-6">
          <!-- Position Name -->
          <div class="group">
            <%= form.label :name, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              Position Name <span class="text-red-500 ml-1">*</span>
            <% end %>
            <%= form.text_field :name, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 transition duration-200 text-gray-900 placeholder-gray-400", placeholder: "e.g., Music Director, Youth Leader" %>
          </div>

          <!-- Department -->
          <div class="group">
            <%= form.label :department_id, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              Department <span class="text-red-500 ml-1">*</span>
            <% end %>
            <%= form.collection_select :department_id, Department.includes(:branch).all, :id, ->(d) { "#{d.name} (#{d.branch.name})" }, { prompt: "Select a department" }, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-purple-500 focus:ring focus:ring-purple-200 transition duration-200 text-gray-900" %>
          </div>

          <!-- Unique Position Toggle -->
          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border-2 border-purple-100">
            <div class="flex items-start">
              <%= form.check_box :unique, class: "mt-1 h-5 w-5 text-purple-600 focus:ring-purple-500 border-gray-300 rounded cursor-pointer" %>
              <div class="ml-4">
                <%= form.label :unique, class: "font-bold text-gray-900 flex items-center cursor-pointer" do %>
                  <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                  </svg>
                  Unique Position
                <% end %>
                <p class="text-sm text-gray-600 mt-1">Check this if only one person can hold this position at a time (e.g., Music Director, Youth President)</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50 px-8 py-6 flex justify-end space-x-4">
          <%= link_to "Cancel", positions_path, class: "px-6 py-3 border-2 border-gray-300 rounded-xl shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transform transition hover:scale-105" %>
          <%= form.submit class: "px-6 py-3 border border-transparent rounded-xl shadow-lg text-base font-medium text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 transform transition hover:scale-105 cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>