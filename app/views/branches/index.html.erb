<!-- app/views/branches/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl mb-4">
        Church <span class="text-indigo-600">Branches</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Explore our network of church locations serving communities across the region
      </p>
    </div>

    <% if current_user&.has_role?(:admin) %>
      <div class="flex justify-center mb-8">
        <%= link_to new_branch_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 transform transition hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add New Branch
        <% end %>
      </div>
    <% end %>

    <!-- Branches Grid -->
    <% if @branches.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @branches.each do |branch| %>
          <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transform transition duration-300 hover:-translate-y-2 overflow-hidden border border-gray-100">
            <!-- Branch Header with Gradient -->
            <div class="h-32 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 relative">
              <div class="absolute inset-0 bg-black opacity-10"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <div class="bg-white rounded-full p-3 shadow-lg">
                      <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white drop-shadow-lg">
                      <%= branch.name %>
                    </h3>
                  </div>
                </div>
              </div>
            </div>

            <!-- Branch Content -->
            <div class="p-6">
              <!-- Address -->
              <div class="flex items-start mb-4">
                <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <p class="text-gray-600 text-sm leading-relaxed">
                  <%= branch.address || 'Address not provided' %>
                </p>
              </div>

              <!-- Status Badge -->
              <div class="mb-4">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= branch.status == 'Active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <span class="w-2 h-2 mr-2 rounded-full <%= branch.status == 'Active' ? 'bg-green-400' : 'bg-gray-400' %> animate-pulse"></span>
                  <%= branch.status || 'Active' %>
                </span>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6 p-4 bg-gray-50 rounded-lg">
                <div class="text-center">
                  <p class="text-2xl font-bold text-indigo-600"><%= branch.departments.count %></p>
                  <p class="text-xs text-gray-600 font-medium">Departments</p>
                </div>
                <div class="text-center">
                  <p class="text-2xl font-bold text-purple-600"><%= branch.users.count %></p>
                  <p class="text-xs text-gray-600 font-medium">Members</p>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex space-x-2">
                <%= link_to branch, class: "flex-1 text-center px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 transition font-medium text-sm" do %>
                  View Details
                <% end %>
                
                <% if current_user&.has_role?(:admin) %>
                  <%= link_to edit_branch_path(branch), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  
                  <%= button_to branch, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this branch?" }, class: "px-4 py-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
        <h3 class="mt-6 text-xl font-medium text-gray-900">No branches yet</h3>
        <p class="mt-2 text-gray-500">Get started by creating your first church branch.</p>
        <% if current_user&.has_role?(:admin) %>
          <div class="mt-6">
            <%= link_to "Create Branch", new_branch_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>