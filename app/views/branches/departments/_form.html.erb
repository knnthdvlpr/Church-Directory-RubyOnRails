<!-- app/views/departments/_form.html.erb -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <%= form_with(model: [@branch, department], class: "space-y-8") do |form| %>
      <% if department.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 shadow-lg">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="text-red-800 font-bold mb-2">
                <%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:
              </h3>
              <ul class="list-disc list-inside text-red-700 space-y-1">
                <% department.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-green-100">
        <!-- Form Header -->
        <div class="bg-gradient-to-r from-green-600 to-teal-600 px-8 py-6">
          <h2 class="text-3xl font-bold text-white flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <%= department.new_record? ? 'Create New Department' : 'Edit Department' %>
          </h2>
          <p class="text-green-100 mt-2">Fill in the details for the church department</p>
        </div>

        <!-- Form Fields -->
        <div class="p-8 space-y-6">
          <!-- Department Name -->
          <div class="group">
            <%= form.label :name, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
              <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              Department Name <span class="text-red-500 ml-1">*</span>
            <% end %>
            <%= form.text_field :name, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 transition duration-200 text-gray-900 placeholder-gray-400", placeholder: "e.g., Music Department, Youth Ministry" %>
          </div>

          <!-- Description -->
          <div class="group">
            <%= form.label :description, class: "flex items-center text-sm font-bold text-gray-700 mb-2" do %>
              <svg class="w-5 h-5 mr-2text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/>
</svg>
Description
<% end %>
<%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-green-500 focus:ring focus:ring-green-200 transition duration-200 text-gray-900 placeholder-gray-400", placeholder: "Describe the purpose and activities of this department" %>
</div>
</div>    <!-- Form Actions -->
    <div class="bg-gray-50 px-8 py-6 flex justify-end space-x-4">
      <%= link_to "Cancel", branch_departments_path(@branch), class: "px-6 py-3 border-2 border-gray-300 rounded-xl shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transform transition hover:scale-105" %>
      <%= form.submit class: "px-6 py-3 border border-transparent rounded-xl shadow-lg text-base font-medium text-white bg-gradient-to-r from-green-600 to-teal-600 hover:from-green-700 hover:to-teal-700 transform transition hover:scale-105 cursor-pointer" %>
    </div>
  </div>
<% end %>
  </div>