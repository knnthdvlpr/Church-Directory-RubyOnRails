<!-- app/views/branches/_form.html.erb -->

  <div class="max-w-3xl mx-auto px-6">

    <%= form_with(model: branch, class: "space-y-8") do |form| %>

      <% if branch.errors.any? %>
        <div class="bg-red-100 border-l-4 border-red-600 p-6 rounded-xl shadow-md">
          <h3 class="text-red-700 font-semibold text-lg mb-2">
            <%= pluralize(branch.errors.count, "error") %> prevented saving:
          </h3>
          <ul class="list-disc ml-5 text-red-600">
            <% branch.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="bg-white shadow-xl rounded-2xl border border-indigo-100 overflow-hidden">

        <!-- Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6">
          <h2 class="text-3xl font-bold text-white flex items-center">
            <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M7 3h5l7 7-7 7-7-7V7a4 4 0 014-4z" />
            </svg>
            <%= branch.new_record? ? "Create New Branch" : "Edit Branch" %>
          </h2>
          <p class="text-indigo-200 text-sm mt-1">
            Fill out the information below completely.
          </p>
        </div>

        <!-- Fields -->
        <div class="p-8 space-y-6">

          <!-- Name -->
          <div>
            <%= form.label :name, class: "font-semibold text-gray-700 mb-2 block" %>
            <%= form.text_field :name,
              class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 text-gray-900
                      focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition",
              placeholder: "e.g., Cainta Main, Rizal Branch" %>
          </div>

          <!-- Address -->
          <div>
            <%= form.label :address, class: "font-semibold text-gray-700 mb-2 block" %>
            <%= form.text_area :address, rows: 3,
              class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 text-gray-900
                      focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition",
              placeholder: "Complete address of this branch" %>
          </div>

          <!-- Status -->
          <div>
            <%= form.label :status, class: "font-semibold text-gray-700 mb-2 block" %>
            <%= form.select :status,
              [["Active", "Active"], ["Inactive", "Inactive"]],
              {},
              class: "w-full px-4 py-3 rounded-xl border-2 border-gray-200 text-gray-900
                      focus:border-indigo-500 focus:ring focus:ring-indigo-200 transition" %>
          </div>

        </div>

        <!-- Actions -->
        <div class="bg-gray-50 px-8 py-6 flex justify-end space-x-4">
          <%= link_to "Cancel",
              branches_path,
              class: "px-6 py-3 rounded-xl bg-white border border-gray-300 
                      text-gray-700 hover:bg-gray-100 transition shadow-sm" %>

          <%= form.submit "Save Branch",
              class: "px-6 py-3 rounded-xl bg-gradient-to-r from-indigo-600 to-purple-600 
                      text-white font-semibold shadow-lg hover:scale-105 transition cursor-pointer" %>
        </div>

      </div>
    <% end %>

  </div>

